<%- include layouts/header.ejs %>

			<!-- Main -->

			<section id="main" class="container">
				<div class="row">
					<div class="12u">
						<!-- Form -->
						<section class="box">
							<center>
								<h3>login</h3></center>
							<% if (message.length > 0) { %>
								<div class="alert alert-danger">
									<%= message %>
								</div>
								<% } %>
									<form method="post" action="/login">
										<div class="row uniform 50%">
											<div class="12u 12u(mobilep)">
												<input type="email" name="email" id="email" value="" placeholder="E-mail" required="" oninvalid="this.setCustomValidity('Campo obrigatÃ³rio')" oninput="setCustomValidity('')" />
											</div>
										</div>
										<div class="row uniform 50%">
											<div class="12u 12u(mobilep)">
												<input type="password" name="password" id="password" value="" placeholder="Senha" required />
											</div>
										</div>
										<center>
											<div class="row uniform 50%">
												<div class="12u 12u(narrower)">
													<input type="checkbox" id="remember" name="remember" checked>
													<label for="remember">Manter conectado</label>
												</div>
											</div>
										</center>
										<hr />
										<center>
											<div class="row uniform">
												<div class="12u">
													<ul class="actions">
														<li><input type="submit" value="Entrar" /></li>
														<li><a href="/" class="button">Voltar</a></li>
													</ul>
												</div>
											</div>
										</center>
									</form>
						</section>
					</div>
				</div>
	</div>

	<%- include layouts/footer.ejs %>
